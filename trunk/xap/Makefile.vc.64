.SUFFIXES: .obj

TARGET=win.xpl
HEADERS=$(wildcard *.h)
SOURCES=$(wildcard *.cpp)
OBJECTS=$(SOURCES:.cpp=.obj)
SDK=f:/games/x-plane\ 10/SDK
OPENAL=c:/Program\ Files\ (x86)/OpenAL\ 1.1\ SDK

CXX=cl
LD=link

CXXFLAGS+=/EHsc /DWINDOWS /I../libavionics  /I../libaccgl /I../alsound /nologo /MT /O2 /GL /DNDEBUG /fp:precise /TP /DWIN32 /I$(SDK)/CHeaders/XPLM /I$(SDK)/CHeaders/Widgets /DIBM=1 /DXPLM200
LNFLAGS=/nologo /LTCG /LIBPATH:$(SDK)/Libraries/Win /LIBPATH:$(OPENAL)/Libs/Win64 /DLL 
LIBS=../libavionics/avionics.lib ../libaccgl/accgl.lib ../alsound/alsound.lib xplm_64.lib xpwidgets_64.lib openal32.lib

all: $(TARGET)

.cpp.obj:
	$(CXX) $(CXXFLAGS) -c $<
	
$(TARGET): $(OBJECTS)
	$(LD) /OUT:$(TARGET) $(LNFLAGS) $(OBJECTS) $(LIBS)

clean:
	rm -f $(OBJECTS) $(TARGET)



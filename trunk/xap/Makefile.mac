PLUGINS="../plugin/xap"
SDK=../../../SDK

TARGET=mac.xpl
HEADERS=$(wildcard *.h)
SOURCES=$(wildcard *.cpp)
OBJECTS=$(SOURCES:.cpp=.o)

OSXC=-arch i386 -mmacosx-version-min=10.7 
OSXL=-arch i386 -mmacosx-version-min=10.7

DEFS= -DAPL=1 -DLIN=0 -DIBM=0 -fPIC -fno-stack-protector -DXPLM200 -fvisibility=hidden -ffast-math -fno-rtti -fno-exceptions -DNDEBUG
DEFS_DEBUG= -DAPL=1 -DLIN=0 -DIBM=0 -fPIC -fno-stack-protector -DXPLM200 -fvisibility=hidden -g

# By default Lua installs itself into /usr/local so we will look for it there too
CXXFLAGS+=-DSNAPSHOT=20121217 -Wall -I$(SDK)/CHeaders/XPLM -I$(SDK)/CHeaders/Widgets -I/usr/local/include -I/usr/local/include/luajit-2.0 -I../libavionics -I../libogl -I../alsound $(DEFS) $(OSXC) 
# # XPLM is loaded dynamically on OS X hence the flag, -dynamiclib is used to get a .a instead of a .bundle
# -undefined warning -flat_namespace -dynamiclib
LNFLAGS+=-F$(SDK)/Libraries/Mac/ -framework XPWidgets -framework XPLM -framework OpenGL -framework OpenAL -framework CoreFoundation -L../libavionics  -L../libaccgl -L../alsound -dynamiclib -shared -rdynamic -L/usr/local/lib32  $(OSXL) -fno-rtti -fvisibility=hidden -s -fno-exceptions -Wl,-exported_symbols_list -Wl,linkscript.mac
LIBS+=-lavionics -laccgl -lalsound -lluajit -lSOIL

all: $(TARGET)

.cpp.o:
	$(CXX) $(CXXFLAGS) -c $<
	
$(TARGET): $(OBJECTS)
	$(CXX) -o $(TARGET) $(LNFLAGS) $(OBJECTS) $(LIBS)

clean:
	rm -f $(OBJECTS) $(TARGET)

install: $(TARGET)
	cp -f $(TARGET) $(PLUGINS)


